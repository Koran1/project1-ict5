<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
 PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
 "https://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<!-- MyBatis가 해당 값의 타입을 명시적으로 알지 못하면 null 취급하게 된다. -->
	<!-- 매번 쿼리를 실행할 때마다 데이터베이스에 요청이 가고, 결과를 새로 받아옵니다. -->
	<settings>
		<setting name="jdbcTypeForNull" value="NULL" />
		<setting name="cacheEnabled" value="false" />
	</settings>
	
	<typeAliases>
		<typeAlias type="com.ict.mytravellist.vo.KakaoVO"  alias="kvo" />
		<typeAlias type="com.ict.mytravellist.vo.NoticeVO"  alias="nvo" />
		<typeAlias type="com.ict.mytravellist.vo.QNAVO"  alias="qvo" />
		<typeAlias type="com.ict.mytravellist.vo.TourTalkVO"  alias="tourtvo" />
		<typeAlias type="com.ict.mytravellist.vo.TravelDBVO"  alias="tdvo" />
		<typeAlias type="com.ict.mytravellist.vo.TrvlPlanVO"  alias="tplvo" />
		<typeAlias type="com.ict.mytravellist.vo.UserVO"  alias="uvo" />
		<typeAlias type="com.ict.mytravellist.vo.WeatherVO"  alias="wvo" />
	</typeAliases>
	
	<mappers>
		<mapper resource="mappers/main_mapper.xml" />
	</mappers>
</configuration>